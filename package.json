{
  "name": "ng-color",
  "version": "4.1.0",
  "scripts": {
    "build": "ng-packagr -p package.json",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n ng-color -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "lint": "tslint --project .",
    "test": "tsc && karma start",
    "start": "http-server example",
    "sass-lint": "sass-lint \"src/**/*.scss\" -v -q",
    "style": "prettier -l --trailing-comma all --print-width 140 --arrow-parens always --single-quote true \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dolanmiu/ng-color"
  },
  "author": {
    "name": "Dolan Miu",
    "email": "dolan_miu@hotmail.com"
  },
  "keywords": [
    "angular",
    "color",
    "colour",
    "picker",
    "angular2",
    "palette",
    "hue",
    "saturation",
    "lightness",
    "simple",
    "ng"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dolanmiu/ng-color/issues"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/color-picker.module.ts",
      "externals": {
        "color-convert": "convert"
      }
    }
  },
  "devDependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@compodoc/compodoc": "^1.0.4",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "core-js": "^2.4.1",
    "del": "^2.2.2",
    "http-server": "^0.9.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^1.7.0",
    "node-sass": "^4.5.2",
    "node-sass-tilde-importer": "^1.0.0",
    "node-watch": "^0.5.2",
    "prettier": "^1.10.2",
    "rollup": "0.41.6",
    "run-sequence": "^1.2.2",
    "rxjs": "^5.1.0",
    "sass-lint": "^1.12.1",
    "ts-node": "~2.0.0",
    "tslint": "^5.8.0",
    "typescript": "2.7.1",
    "zone.js": "^0.8.4"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@types/color-convert": "^1.9.0",
    "color-convert": "^2.0.0"
  }
}
